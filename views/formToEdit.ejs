<!DOCTYPE html>
<html lang="es">
    <head>
        <!-- Include Head -->
        <%- include('partials/head') %>
        <link rel="stylesheet" href="/stylesheets/formularios.css">
    </head>
<body>
    <!-- Header -->
    <%- include('partials/header') %>
    <!-- /Header -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Estás editando: <%= productToEdit.name %></h2>
            </div>
        </div>
        <div class="col-12">
            <form action="/productos/<%= productToEdit.id %>?_method=PUT" method="POST">
                <div class="row product-detail">
                    <div class="col-12 col-md-6">
                        <label for="name" class="form-label">Nombre del producto:</label>
                        <input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input" value="<%= productToEdit.name %>">
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="price" class="form-label">Precio del producto:</label>
                        <input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input" value="<%= productToEdit.price %>">
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="discount" class="form-label">Descuento:</label>
                        <input type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input" value="<%= productToEdit.discount %>">
                    </div>

             
						<input type="hidden" id="idproducto" name="idproducto" placeholder="" class="form-input" value="<%= productToEdit.idproducto %>">

                    
                    <div class="col-12 col-md-6">
                        <label for="category" class="form-label">Categoría:</label>
                        <select name="category" id="category" class="form-input">
                            <option disabled value="">Elegí</option>
                            <option <% if(productToEdit.category == "in-sale") { %> selected <% } %> value="in-sale">En oferta</option>
							<option <% if(productToEdit.category == "visited") { %> selected <% } %> value="visited">Últimos agregados</option>
                        </select>
                    </div>
                    <div class="col-12 col-md-6">
						<label for="seccion" class="form-label">Sección:</label>
						<select name="seccion" id="seccion" class="form-input">
                            <option disabled value="">Elegí</option>
                            <option <% if(productToEdit.seccion == "cardio") { %> selected <% } %> value="in-sale">Cardio</option>
							<option <% if(productToEdit.seccion == "musculacion") { %> selected <% } %> value="visited">Musculación</option>
                            <option <% if(productToEdit.seccion == "accesorios") { %> selected <% } %> value="in-sale">Accesorios</option>
							<option <% if(productToEdit.seccion == "paquetes") { %> selected <% } %> value="visited">Paquetes</option>
				
						</select>
					</div>
                    <div class="col-12">
                        <label for="description" class="form-label">Descipción:</label>
                        <textarea name="description" id="description" class="form-input"><%= productToEdit.description %></textarea>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="buy-now-button">Guardar producto</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- /todos los productos -->
    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
</body> 
</html>